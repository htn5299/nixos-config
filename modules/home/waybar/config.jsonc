{
  "layer": "top",
  "position": "bottom",
  "reload_style_on_change": true,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "tray"
  ],
  "hyprland/workspaces": {
    "format": "{name}",
    "all-outputs": false
